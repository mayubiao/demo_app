<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/oval_1d9bda"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            app:showDividers="middle"
            app:divider="@drawable/line_f4f4f4_v"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="--"
                android:gravity="center_vertical"
                android:id="@+id/tv_item_id"
                android:textSize="12sp"
                android:textColor="@color/color_1869B0"
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
            <TextView
                android:text="--"
                android:gravity="center_vertical"
                android:id="@+id/tv_item_title"
                android:textSize="14sp"
                android:textColor="@color/color_2D2D2D"
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_item_price"
                android:textSize="12sp"
                android:textColor="@color/color_858585"
                android:layout_width="match_parent"
                android:layout_height="32dp"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_item_status"
            android:gravity="center"
            android:textColor="@color/color_19AF72"
            android:textSize="10sp"
            android:layout_width="64dp"
            android:layout_height="32dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>